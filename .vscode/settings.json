{
    "python.testing.pytestEnabled": true,
    "python.testing.pytestPath": "~/anaconda3/envs/qgis_plugin/bin/pytest",
    "python.experiments.optInto": [
        "pythonTestAdapter"
    ],
    "python.autoComplete.extraPaths": [
        "${userHome}/anaconda3/envs/qgis_plugin/share/qgis/python/",
        "${userHome}/anaconda3/envs/qgis_plugin/share/qgis/python/plugins",
        "${userHome}/Library/Application Support/QGIS/QGIS3/profiles/default/python",
        "${userHome}/Library/Application Support/QGIS/QGIS3/profiles/default/python/plugins",
    ],
    "python.analysis.extraPaths": [
        "~/anaconda3/envs/qgis_plugin/lib/python3.11/site-packages/PyQt5-stubs",
        "~/anaconda3/envs/qgis_plugin/share/qgis/python/",
        "~/anaconda3/envs/qgis_plugin/share/qgis/python/plugins",
        "~/Library/Application Support/QGIS/QGIS3/profiles/default/python",
        "~/Library/Application Support/QGIS/QGIS3/profiles/default/python/plugins"
    ],
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
    "qtForPython.rcc.options": [
        "-o \"${workspaceFolder}${pathSeparator}redistricting${pathSeparator}${fileBasenameNoExtension}_resources.py\""
    ],
    "qtForPython.uic.options": [
        "-o",
        "${workspaceFolder}${pathSeparator}redistricting${pathSeparator}gui${pathSeparator}ui${pathSeparator}${resourceBasenameNoExtension}.py"
    ],
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "pylint.path": [
        "{$userHome}/anaconda3/envs/qgis_plugin/bin/pylint"
    ],
    "jupyter.notebookFileRoot": "${workspaceFolder}",
}